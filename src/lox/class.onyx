#load "./instance"
#load "./runtime_error"

use core { Result }

LoxClass :: struct {
    name: str;

    call :: (c: LoxClass) -> Result(LoxObject, RuntimeError) {
        instance := LoxInstance.{klass=c};
        // TODO: free it
        instance_ptr := context.allocator->move(instance);
        return .{Ok=LoxObject.{Instance=instance_ptr}};
    }

    arity :: (c: LoxClass) -> u8 {
        return 0;
    }
}
